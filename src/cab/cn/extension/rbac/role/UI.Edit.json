{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=角色基本信息"
            ],
            [
                "name,名称,14"
            ],
            [
                {
                    "metadata": "code,编码,14,,,placeholder=（根据规范编码全大写，如R3 - CI.USER）",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/role/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                "comment,备注,14"
            ],
            [
                {
                    "metadata": "power,定制权限,9,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                },
                {
                    "metadata": "active,启用,5,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.role.save",
            "$opDelete": "act.role.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，角色信息编辑成功！",
            "removed": "当前角色信息已删除成功！"
        }
    }
}