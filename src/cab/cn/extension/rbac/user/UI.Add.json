{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=用户基本信息"
            ],
            [
                {
                    "metadata": "username,账号,14,,,placeholder=请输入账号!",
                    "optionConfig.rules": [
                        "required,请输入账号，账号不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，账号重复！",
                            "config": {
                                "uri": "/api/user/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                "realname,姓名,14"
            ],
            [
                "alias,昵称,14"
            ],
            [
                {
                    "metadata": "password,新密码,14,,,type=password",
                    "optionConfig.rules": [
                        "required,请输入密码",
                        {
                            "min": 8,
                            "message": "密码长度必须大于8个字符！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "cpassword,确认密码,14,,,type=password",
                    "optionConfig.rules": [
                        "required,请再次输入密码",
                        {
                            "min": 8,
                            "message": "密码长度必须大于等于8个字符！"
                        },
                        {
                            "validator": "same",
                            "message": "两次输入密码不一致！",
                            "config": {
                                "to": "password"
                            },
                            "condition": [
                                "to.length >= 8"
                            ]
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"mobile,手机号,14,,,placeholder=请输入手机号!",
                    "optionConfig.rules": [
                        "required,请输入手机号,手机号不能为空!",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入手机号！"
                        },
                        {
                            "validator": "existing",
                            "message": "对不起，该手机号已绑定其他账号！",
                            "config": {
                                "uri": "/api/user/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"email,邮箱,14,,,placeholder=请输入邮箱!",
                    "optionConfig.rules": [
                        "required,请输入邮箱,邮箱不能为空!",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮件地址！"
                        },
                        {
                            "validator": "existing",
                            "message": "对不起，该邮箱已绑定其他账号！",
                            "config": {
                                "uri": "/api/user/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "active,启用,14,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [],
        "initial":{
            "active":"BOOL:true",
            "mobile":"FIX:15900000000",
            "email":"FIX:lang.xx@hpe.com"
        },
        "op": {
            "$opAdd": "act.user.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，用户信息添加成功！"
        }
    }
}
